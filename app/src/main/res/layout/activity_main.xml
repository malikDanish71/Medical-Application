<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="15dp"
            android:background="@color/material_dynamic_primary40"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:logo="@drawable/logosmall"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Medical Health Care"
            app:titleTextColor="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="313dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="403dp"
                        android:layout_height="260dp"
                        android:layout_marginTop="44dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/backgroundimg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/editTextTextMultiLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="16dp"
                        android:inputType="textMultiLine"
                        android:text="WELCOME TO THE HEALTHCARE SYSTEM"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:textStyle="italic" />

                    <LinearLayout
                        android:id="@+id/buttons_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editTextTextMultiLine"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:onClick="getstarted"
                            android:text="Get Started" />

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:onClick="aboutus"
                            android:text="About Us" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:onClick="Appointment"
                            android:text="Appointment" />

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:onClick="doctors"
                            android:text="Doctors" />
                    </LinearLayout>

                    <VideoView
                        android:id="@+id/videoView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_below="@id/editTextTextMultiLine"
                        android:layout_alignTop="@id/buttons_container"
                        android:layout_alignBottom="@id/buttons_container"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/buttons_container"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                </RelativeLayout>

                <!-- Adding the SupportMapFragment -->
                <FrameLayout
                    android:id="@+id/map_container"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp">
                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="332dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/doctor2" />

                    <TextView
                        android:id="@+id/nameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Muhammad Jawad"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/quoteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="6dp"
                        android:layout_marginTop="16dp"
                        android:text="I hope you will recover soon Inshallah! we do well for you in this time as well as in future"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/side_navigation" />
</androidx.drawerlayout.widget.DrawerLayout>
